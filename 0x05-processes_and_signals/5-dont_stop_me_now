#!/usr/bin/env bash
# This script stops the running 4-to_infinity_and_beyond process

# Find the PID of the script
PID=$(pgrep -f 4-to_infinity_and_beyond)

# Check if a PID was found
if [ -z "$PID" ]; then
    echo "No running 4-to_infinity_and_beyond process found."
else
    kill "$PID"
    echo "Stopped 4-to_infinity_and_beyond (PID: $PID)."
fi
